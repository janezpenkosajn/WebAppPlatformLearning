systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true
  engine: wiredTiger

processManagement:
  fork: true  
  pidFilePath: /var/run/mongodb/mongod.pid  

net:
  port: 27017
  bindIp: 0.0.0.0

replication:
  replSetName: {{replicaSetName}}